# Split pane with v
bind-key v split-window -h

# Use vim keybindings in copy mode
setw -g mode-keys vi

# Activate with Ctrl+a instead of Ctrl+b
unbind C-b
set -g prefix C-a
bind C-a send-prefix

# Enable True Colors
set -g default-terminal "tmux-256color"
set -ga terminal-overrides ",*256col*:Tc"
